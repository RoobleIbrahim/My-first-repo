@model Visitors.Models.Visitor

@{
    ViewData["Title"] = "Edit";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Visitor</h2>

            </div>
        </div>
    </div>
    <div class="row">
        <form asp-action="Edit" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VisitorId" />
            @*  <div class="form-group col-md-6">
            <label  class="control-label">Full name</label>
            <select asp-for="UserID" class ="form-control" asp-items="ViewBag.UserID"></select>
            </div> *@
            <div class="form-group col-md-6">
                <label class="control-label">Place Name</label>
                <select asp-for="PlaceId" class="form-control" asp-items="ViewBag.PlaceId"></select>
            </div>
            <div class="form-group col-md-6">
                <label class="control-label">Purpose</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="VisitedDate" class="control-label"></label>
                <input asp-for="VisitedDate" class="form-control" />
                <span asp-validation-for="VisitedDate" class="text-danger"></span>
            </div>
            <div class="form-control  col-12 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" />
                    @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="row pt-2 mt-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Visitor" asp-action="Index" class="btn btn-info form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
